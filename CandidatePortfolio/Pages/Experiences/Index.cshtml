@model HelloWorld.Pages.Experiences.IndexModel

@{
    ViewData["Title"] = "Experience Directory";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Tenure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].ExperienceDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Experience) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profile.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
